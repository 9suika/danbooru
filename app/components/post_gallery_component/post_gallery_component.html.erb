<div class="post-gallery post-gallery-<%= gallery_type %>">
  <% if empty? %>
    <p>No posts found.</p>
  <% else %>
    <div class="posts-container grid gap-1 grid-cols-2 md:block">
      <% posts.each do |post| -%>
<%    %><%= post_preview(post, **options) -%>
      <% end -%>
    </div>
  <% end %>

  <%= footer %>

  <% if has_paginator? %>
    <%= numbered_paginator(posts) %>
  <% end %>
</div>
